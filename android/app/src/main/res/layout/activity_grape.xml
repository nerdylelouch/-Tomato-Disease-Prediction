<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grape Diseases and Remedies"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- Healthy Grape Plant Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Healthy Grape Plant:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Well-drained soil"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Regular watering"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Balanced fertilization"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Mulch for moisture retention and weed control"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Regular inspection for pests and diseases"
                    android:textColor="#666666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Powdery Mildew Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powdery Mildew (Grape):"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Apply sulfur-based or potassium bicarbonate fungicides"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Prune for better airflow and remove infected parts"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid over-fertilizing with nitrogen"
                    android:textColor="#666666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Leaf Mold Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaf Mold:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Improve air circulation"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid overhead watering"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Use fungicides like chlorothalonil, copper-based sprays, or mancozeb"
                    android:textColor="#666666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Remove infected leaves"
                    android:textColor="#666666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add other sections similarly (e.g., Early Blight, Late Blight, Bacterial Spot) -->

    </LinearLayout>
</ScrollView>