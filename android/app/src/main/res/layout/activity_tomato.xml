<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato Diseases and Remedies"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- Leaf Mold Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaf Mold:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Ensure proper air circulation by pruning and spacing plants."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid overhead watering."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Apply fungicides like chlorothalonil or copper-based sprays."
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Early Blight -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Early Blight:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Remove infected leaves and dispose of them."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Mulch soil to reduce splash transmission."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Use fungicides containing mancozeb or chlorothalonil."
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Late Blight -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Late Blight:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Destroy infected plants to prevent spread."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Apply copper-based fungicides promptly."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Plant blight-resistant varieties."
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bacterial Spot -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bacterial Spot:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#E74C3C"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Remove infected leaves immediately."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Apply copper-based bactericides weekly."
                    android:textColor="#7F8C8D"
                    android:paddingBottom="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Avoid working in wet foliage to prevent spreading."
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Healthy Tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Healthy Tips:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#4CAF50"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Ensure regular watering and adequate fertilization for optimal growth."
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
